<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:EBookReader.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Themes/Button.xaml"/>
        <ResourceDictionary Source="/Themes/Paths.xaml"/>
        <ResourceDictionary Source="/Themes/ProgressBar.xaml"/>
        <ResourceDictionary Source="/Themes/Slider.xaml"/>
        <ResourceDictionary Source="/Themes/ScrollView.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type controls:AiSlider}" BasedOn="{StaticResource AiSliderTemplate}"/>
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BtnDefaultStyle}"/>

</ResourceDictionary>
