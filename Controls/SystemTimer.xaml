<UserControl x:Class="EBookReader.Controls.SystemTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="SysTimer" Foreground="#FFF" FontSize="14" Background="Transparent"
             VerticalAlignment="Bottom" HorizontalAlignment="Right"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" 
             Unloaded="SystemTimer_OnUnloaded" Loaded="SystemTimer_OnLoaded">
    <TextBlock x:Name="TbTime" TextAlignment="Right" Foreground="{Binding ElementName=SysTimer,Path=Foreground}" FontSize="{Binding ElementName=SysTimer,Path=FontSize}" Text="00:00"/>
</UserControl>
